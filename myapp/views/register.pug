doctype html
html
  head
    meta(charset='utf-8')
    title Registro
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css' integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm' crossorigin='anonymous')

  body


  
    .border-bottom.border-warning.border-5
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark(style='background-color: #272727!important;')
      a.navbar-brand.my-2(href='/')
        img(src='../images/logo.png' height='45' alt='')
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo02' aria-controls='navbarTogglerDemo02' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarTogglerDemo02.collapse.navbar-collapse
        ul.navbar-nav.ml-auto.mt-2.mt-lg-0
          li.nav-item.align-self-center
            a.nav-link(href='/incident/create') 
              button.btn.btn-outline-warning Reportar Incidente
          li.nav-item.align-self-center
            a.nav-link(href='/login') Ingresar
          li.nav-item.align-self-center
            a.nav-link(href='/incident/getAll') Todos los Reportes
          li.nav-item.align-self-center
            a.nav-link(href='#') Alertas Locales
          li.nav-item.align-self-center
            a.nav-link(href='#') Ayuda


    .container.my-5
      h1.text-center.mb-3 Registrarse 
      form
        // Names input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='names') Nombres
          .col-sm-10
            input#names.form-control(type='text', required)
        // Surnames input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='surnames') Apellidos
          .col-sm-10
            input#surnames.form-control(type='text', required)
        // DNI input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='dni') DNI
          .col-sm-10
            input#dni.form-control(type='text', required)
        // Mobile input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='mobile') Teléfono Móvil
          .col-sm-10
            input#mobile.form-control(type='text', required)
        // Email input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='email') Email
          .col-sm-10
            input#email.form-control(type='email', required)
        // Password input
        .form-group.row.mb-2
          label.col-sm-2.col-form-label(for='password') Contraseña
          .col-sm-10
            input#password.form-control(type='password', required)
        .d-flex.align-items-center.justify-content-center.pb-4
            p.mb-0.mr-2 ¿Ya tiene cuenta?
            a.btn.btn-outline-warning(href='/login') Ingresar
        // Submit button
        button.btn.btn-warning.btn-block.mb-4(type='button' onclick='signup();') Registrar

